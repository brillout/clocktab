{
  "scripts": {
    "dev": "yarn goldpage:dev",
    "postinstall": "git submodule update tab-utils/ && (cd tab-utils/ && yarn install)",
    "deploy": "yarn prod:build && yarn prod:deploy",

    "goldpage:dev": "goldpage dev",
    "goldpage:build": "goldpage build",

    "dev:link": "ln -s `pwd`/static/* .build/browser/",

    "prod:build": "yarn prod:build:clean && yarn goldpage:build && yarn prod:build:static",
    "prod:build:clean": "rm -rf .build/",
    "prod:build:static": "mkdir -p .build/browser/ && cp -r static/* .build/browser/",
    "prod:deploy": "push-dir --dir=.build/browser/ --branch=gh-pages --cleanup",
    "prod:serve": "serve .build/browser/ --listen 3000"
  },
  "dependencies": {
    "@brillout/assert": "^0.1.1",
    "@goldpage/react": "^0.5.6",
    "@goldpage/serverless": "^0.5.6",
    "bowser": "^2.9.0",
    "flatpickr": "^4.6.3",
    "goldpage": "^0.5.6",
    "iframe-resizer": "^4.2.10",
    "parcel": "^1.12.4",
    "push-dir": "^0.4.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "serve": "^11.3.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3"
  }
}
